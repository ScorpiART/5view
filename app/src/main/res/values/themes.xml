<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TGUProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.Matrix.Text</item>

    </style>

    <style name="Theme.Matrix.Text" parent="Theme.Matrix.Button">
        <item name="android:textColor">@color/matrix_green</item>

    </style>

    <style name="Theme.BlueTablet.Button" parent="Theme.Matrix.Button">
        <item name="android:backgroundTint">@color/matrix_blue</item>
    </style>

    <style name="Theme.RedTablet.Button" parent="Theme.Matrix.Button">
        <item name="android:backgroundTint">@color/matrix_red</item>
    </style>

    <style name="Theme.Matrix.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">150dp</item>



    </style>

</resources>