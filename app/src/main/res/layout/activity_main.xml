<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/yourChoise"
        android:text="@string/Morpheus_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Morpheus"
        android:layout_marginTop="150dp"
        />

    <Button
        android:onClick="clickBlueTable"
        android:text="@string/blue"
        style="@style/Theme.BlueTablet.Button"
        android:id="@+id/blue_table"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/red_table"
        app:layout_constraintTop_toBottomOf="@+id/yourChoise"
        android:layout_marginTop="150dp" />

    <Button
        android:onClick="clickRedTable"
        android:text="@string/red"
        style="@style/Theme.RedTablet.Button"
        android:id="@+id/red_table"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/blue_table"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourChoise"
        android:layout_marginTop="150dp"/>


    <ImageView
        android:id="@+id/Morpheus"
        android:layout_width="408dp"
        android:layout_height="190dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/morpheus"

        />


</androidx.constraintlayout.widget.ConstraintLayout>


